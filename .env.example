# SecureVault Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/securevault

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-before-deployment
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here12
PBKDF2_ITERATIONS=390000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/zip

# Storage Configuration
STORAGE_PATH=./secure_storage

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000

# Debug Mode (set to False in production)
DEBUG=False

# Frontend URL (defaults to https://securevault-ixu4.onrender.com if not set)
FRONTEND_URL=https://securevault-ixu4.onrender.com